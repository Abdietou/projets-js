{% extends "layout.twig" %}

{% block body %}
    <h1>Changez votre mot de passe</h1>
    <form action="" method="POST">
    {% if errorFrom %}
            <p class="text-danger">Erreur !</p>
            <ul class="errors">
            {% for item in errorFrom %}  
                {% if item.password %}
                    <li>{{item.password.message}}</li>
                {% endif %}     
                {% if item.passwordConfirm %}
                    <li>{{item.passwordConfirm.message}}</li>
                {% endif %}      
            {% endfor %}
            </ul>
    {% endif %}
        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" value="password" name="password" class="form-control">
        </div>
        <div class="form-group">
            <label for="passwordConfirm">Confirmez mot de passe :</label>
            <input type="password" id="passwordConfirm" value="password" name="passwordConfirm" class="form-control">
        </div>
        <p class="text-center">Avez-vous un compte ? <a href="/users/signup">Cliquez ici pour le reinitialiser !</a></p>
        <button type="submit" class="btn btn-success mt-3">Reinitialiser mot de passe</button>
    </form>
{% endblock %}