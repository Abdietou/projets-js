{% extends "layout.twig" %}

{% block body %}
	<div class="" style="width: 100%;">
		<img src="{{article.image}}" width="1800" height="400" class="card-img-top" alt={{article.name}}>
		<div class="card-body">
			<h3>{{article.title}}</h3>
			<p> <strong>Publié le</strong> {{article.publishedDate | date("d-m-y h:m:s")}}
			</p>
			<hr>
			<p class="card-text">{{article.content}}</p>
			<a href="/" class="btn btn-primary">Revenir à l'accueil</a>
			<hr>
		</div>
	</div>
{% endblock %}
