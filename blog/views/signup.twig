{% extends "layout.twig" %}

{% block body %}
    <h1>S'enregistrer</h1>
        {% if errorFrom %}
            <p class="text-danger">Erreur !</p>
            <ul class="errors">
            {% for item in errorFrom %}
                {% if item.username %}
                    <li>{{item.username.message}}</li>
                {% endif %}
                {% if item.firstname %}
                    <li>{{item.firstname.message}}</li>
                {% endif %}
                {% if item.lastname %}
                    <li>{{item.lastname.message}}</li>
                {% endif %}
                {% if item.email %}
                    <li>{{item.email.message}}</li>
                {% endif %}  
                {% if item.password %}
                    <li>{{item.password.message}}</li>
                {% endif %}     
                {% if item.passwordConfirm %}
                    <li>{{item.passwordConfirm.message}}</li>
                {% endif %}      
            {% endfor %}
            </ul>
    {% endif %}
    <form action="" method="POST">
        <p class="text-center">Avez-vous un compte ? <a href="/users/login">Cliquez ici pour vous connecter !</a></p>
        <div class="form-group">
            <label for="username">Identifiant :</label>
            <input type="text" id="username" value="nodejs" name="username" class="form-control">
        </div>
        <div class="form-group">
            <label for="firstname">Nom :</label>
            <input type="text" id="firstname" value="firstname" name="firstname" class="form-control">
        </div>
        <div class="form-group">
            <label for="lastname">Pr√©nom :</label>
            <input type="text" id="lastname" value="lastname" name="lastname" class="form-control">
        </div>
        <div class="form-group">
            <label for="email">Email :</label>
            <input type="text" id="email" value="nodejs@test.com" name="email" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" value="password" name="password" class="form-control">
        </div>
        <div class="form-group">
            <label for="passwordConfirm">Confirmez mot de passe :</label>
            <input type="password" id="passwordConfirm" name="passwordConfirm" class="form-control">
        </div>
        <button type="submit" class="btn btn-success mt-3">S'enregistrer</button>
    </form>
{% endblock %}